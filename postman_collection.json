      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"patientName\": \"Ahmad Rizki\",\n  \"patientId\": \"P001\",\n  \"diagnosis\": \"Flu Biasa\",\n  \"treatment\": \"Istirahat dan minum air putih\",\n  \"symptoms\": \"Demam 38 derajat, batuk\",\n  \"department\": \"Poli Umum\",\n  \"doctorName\": \"Dr. Budi\",\n  \"dataHash\": \"abc123def456\",\n  \"isEncrypted\": true\n}"
        },
        "url": {
          "raw": "http://localhost:4000/api/fabric/records",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "fabric", "records"]
        },
        "description": "Create new medical record and generate Fabric transaction ID"
      },
      "response": []
    },
    {
      "name": "3. Get All Records",
      "request": {
        "method": "GET",
        "header": [],
